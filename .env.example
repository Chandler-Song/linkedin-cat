# LinkedIn Cat 环境变量配置模板
# ================================
# 复制此文件为 .env 并填入实际值
# cp .env.example .env

# ===================
# LinkedIn 认证配置
# ===================
# Cookie 文件路径（相对于项目根目录）
LINKEDIN_COOKIES_PATH=linkedin_cookies.json

# ===================
# 浏览器配置
# ===================
# 是否启用无头模式（true/false）
HEADLESS_MODE=false

# Chrome 浏览器路径（留空则自动检测）
CHROME_BINARY_PATH=

# ChromeDriver 路径（留空则自动下载）
CHROMEDRIVER_PATH=

# ===================
# 缓存配置
# ===================
# 缓存目录路径
CACHE_DIR=./cache

# 联系人缓存冷却时间（秒）
CACHE_COOLDOWN_SECONDS=604800

# ===================
# 消息配置
# ===================
# 默认消息模板文件路径
DEFAULT_MESSAGE_TEMPLATE=./templates/default_message.txt

# 消息最大长度
MAX_MESSAGE_LENGTH=300

# ===================
# 速率限制配置
# ===================
# 每日最大发送数量
DAILY_SEND_LIMIT=100

# 请求间隔（秒）
REQUEST_INTERVAL_MIN=3
REQUEST_INTERVAL_MAX=10

# ===================
# 日志配置
# ===================
# 日志级别：DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE_PATH=./logs/linkedin_cat.log

# ===================
# 重试配置
# ===================
# 最大重试次数
MAX_RETRIES=3

# 重试基础延迟（秒）
RETRY_BASE_DELAY=5
